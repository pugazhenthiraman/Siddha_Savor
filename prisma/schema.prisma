generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x", "windows"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// =======================
//       MODELS
// =======================

model Admin {
  id         Int      @id @default(autoincrement())
  email      String   @unique
  password   String
  smtpConfig Json?
  createdAt  DateTime @default(now())
}

model Doctor {
  id          Int          @id @default(autoincrement())
  doctorUID   String?      @unique @db.VarChar(8)
  email       String       @unique
  password    String?
  status      DoctorStatus @default(PENDING)
  formData    Json
  inviteToken String?      @unique
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  patients    Patient[]
}

model Patient {
  id          Int      @id @default(autoincrement())
  email       String   @unique
  password    String?
  formData    Json
  inviteToken String?  @unique
  doctorUID   String?
  doctor      Doctor?  @relation(fields: [doctorUID], references: [doctorUID])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model InviteLink {
  id          Int        @id @default(autoincrement())
  token       String     @unique
  role        InviteRole
  doctorUID   String?    // For patient invites: which doctor they'll be assigned to
  createdBy   String     @default("ADMIN") // "ADMIN" or doctorUID who created it
  recipientEmail String? // Email address of intended recipient
  recipientName  String? // Name of intended recipient
  isUsed      Boolean    @default(false) // Track if link has been used
  usedAt      DateTime?  // When the link was used for registration
  expiresAt   DateTime
  createdAt   DateTime   @default(now())
}

model PasswordReset {
  id        Int      @id @default(autoincrement())
  email     String
  token     String   @unique
  code      String   // 6-digit verification code
  userRole  String   // "admin", "doctor", "patient"
  data      Json     // Flexible JSON for additional fields
  isUsed    Boolean  @default(false)
  expiresAt DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum DoctorStatus {
  PENDING
  APPROVED
  REJECTED
}

enum InviteRole {
  DOCTOR
  PATIENT
}
